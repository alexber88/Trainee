<config>
    <modules>
        <Cgi_DeadlockFix>
            <version>0.0.1</version>
        </Cgi_DeadlockFix>
    </modules>
    <global>
        <models>
            <cgi_deadlockfix>
                <class>Cgi_DeadlockFix_Model</class>
            </cgi_deadlockfix>
        </models>
        <events>
            <controller_front_init_before>
                <observers>
                    <cgi_deadlock_retry>
                        <class>cgi_deadlockfix/observer</class>
                        <method>register</method>
                    </cgi_deadlock_retry>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <default>
        <dev>
            <deadlock>
                <enabled>1</enabled>
            </deadlock>
        </dev>
    </default>
</config>