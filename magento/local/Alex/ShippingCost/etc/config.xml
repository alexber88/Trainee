                    <!--</alex_shippingcost_getshippingcost>-->
                <!--</observers>-->
            <!--</sales_order_item_collection_load_after>-->
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <alex_shippingcost before="Mage_Adminhtml">Alex_ShippingCost_Adminhtml</alex_shippingcost>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>