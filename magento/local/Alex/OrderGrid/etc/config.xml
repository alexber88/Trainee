<?xml version="1.0"?>
<config>
    <modules>
        <Alex_OrderGrid>
            <version>1.0.0</version>
        </Alex_OrderGrid>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <alex_ordergrid_core>
                        <type>singleton</type>
                        <class>Alex_OrderGrid_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </alex_ordergrid_core>
                </observers>
            </core_block_abstract_to_html_before>
            <sales_order_grid_collection_load_before>
                <observers>
                    <alex_ordergrid_sales>
                        <type>singleton</type>
                        <class>Alex_OrderGrid_Model_Observer</class>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </alex_ordergrid_sales>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
    </adminhtml>
</config>